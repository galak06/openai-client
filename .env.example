# OpenAI API Configuration
# Copy this file to .env and fill in your actual values

# Required: Your OpenAI API key
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=xxxx

# Optional: Custom base URL (default: https://api.openai.com/v1)
# Useful for using OpenAI-compatible APIs or proxies
OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: OpenAI Organization ID
# If you're part of multiple organizations, specify which one to use
OPENAI_ORGANIZATION=org-your-organization-id-here

# Optional: Request timeout in seconds (default: 60)
OPENAI_TIMEOUT=60

# Optional: Maximum number of retries for failed requests (default: 3)
OPENAI_MAX_RETRIES=3

# Optional: Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
OPENAI_LOG_LEVEL=INFO
